# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
# PostgreSQL (主要資料庫)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=twin_gate
DB_USER=postgres
DB_PASSWORD=password

# Firebase Realtime Database (可選)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Email Configuration (for verification emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@twingate.com
FROM_NAME=Twin Gate

# Blockchain Configuration
# Ethereum/Polygon Network
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
PRIVATE_KEY=your-wallet-private-key
CONTRACT_ADDRESS=your-sbt-contract-address

# Twin3.ai Integration
TWIN3_API_URL=https://api.twin3.ai
TWIN3_WEB_VERIFICATION_URL=https://verify.twin3.ai
TWIN3_API_KEY=your-twin3-api-key
TWIN3_WEBHOOK_SECRET=your-twin3-webhook-secret

# Verification Configuration
VERIFICATION_PASSING_THRESHOLD=100
SBT_MINTING_THRESHOLD=100

# SBT Configuration
SBT_CONTRACT_ABI_PATH=./contracts/Twin3SBT.json
DEFAULT_SBT_METADATA_URI=https://api.twingate.com/metadata/

# Bot Configuration
# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=YourBotUsername

# Discord Bot
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_GUILD_ID=your-discord-guild-id

# LINE Bot
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_LIFF_ID=your-line-liff-id

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
CORS_ORIGIN=http://localhost:3001
BCRYPT_ROUNDS=12

# External APIs
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
